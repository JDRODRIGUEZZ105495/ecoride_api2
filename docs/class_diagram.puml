classDiagram
    class Person {
        <<Abstract>>
        -String id
        -String name
        -String email
    }
    
    class Driver {
        -String licenseNumber
        -int experienceYears
    }
    
    class Passenger {
        -String membershipLevel
        -int totalTrips
    }
    
    class Vehicle {
        <<Abstract>>
        -String id
        -String brand
        -String model
    }
    
    class Car {
        -int numberOfDoors
        -int seatingCapacity
    }
    
    class Scooter {
        -double maxSpeed
        -double weight
    }
    
    class Trip {
        -String id
        -String driverId
        -String vehicleId
        -double distance
        -LocalDateTime startTime
        -LocalDateTime endTime
        -String origin
        -String destination
    }
    
    Person <|-- Driver
    Person <|-- Passenger
    Vehicle <|-- Car
    Vehicle <|-- Scooter
    Trip --> "1" Driver : has
    Trip --> "1" Vehicle : uses
