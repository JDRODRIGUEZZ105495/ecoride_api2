@startuml EcoRide Class Diagram

' Enable arrow directions
skinparam linetype ortho

' Abstract Person class
abstract class Person {
  -id: String
  -name: String
  -email: String
  -phone: String
}

' Abstract Vehicle class
abstract class Vehicle {
  -id: String
  -brand: String
  -model: String
  -year: int
  -batteryCapacity: double
  -licensePlate: String
}

' Driver class
class Driver {
  -licenseNumber: String
  -experienceYears: int
}

' Passenger class
class Passenger {
  -membershipLevel: String
  -totalTrips: int
}

' Car class
class Car {
  -numberOfDoors: int
  -seatingCapacity: int
}

' Scooter class
class Scooter {
  -maxSpeed: double
  -weight: double
}

' Trip class
class Trip {
  -id: String
  -driverId: String
  -vehicleId: String
  -distance: double
  -startTime: LocalDateTime
  -endTime: LocalDateTime
  -origin: String
  -destination: String
}

' Inheritance relationships
Person <|-- Driver
Person <|-- Passenger
Vehicle <|-- Car
Vehicle <|-- Scooter

' Association relationships
Driver "1" -- "*" Trip : drives
Vehicle "1" -- "*" Trip : usedIn
Passenger "1" -- "*" Trip : takes

' Add notes
note right of Person: Abstract base class for all people in the system
note bottom of Vehicle: Abstract base class for all vehicle types

@enduml
